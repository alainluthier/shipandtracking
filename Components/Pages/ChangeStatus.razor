@page "/change-status"
@inherits LayoutComponentBase

<div>
    <h1>Change Status</h1>
    <div>
        <form class="row align-items-center">
            <div class="col-auto">
                <input class="form-control" type="search" placeholder="Tracking number" aria-label="Search" name=""
                    id="">
            </div>

            <div class="col-auto">
                <button type="submit" class="btn btn-primary">Track</button>
            </div>
        </form>
    </div>
    <form action="">
        <div class="row mb-3 mt-3">
            <label class="col-sm-2 col-form-label" for="tracking">
                Tracking Number
            </label>
            <div class="col-sm-8">
                <input class="form-control" type="text" name="" id="" disabled>
            </div>
        </div>
        <div class="row mb-3 mt-3">
            <label class="col-sm-2 col-form-label" for="tracking">
                Description
            </label>
            <div class="col-sm-8">
                <input class="form-control" type="text" name="" id="" disabled>
            </div>
        </div>
        <div class="row mb-3 mt-3">
            <label class="col-sm-2 col-form-label" for="tracking">
                Sender
            </label>
            <div class="col-sm-8">
                <input class="form-control" type="text" name="" id="" disabled>
            </div>
        </div>
        <div class="row mb-3 mt-3">
            <label class="col-sm-2 col-form-label" for="tracking">
                Recipient
            </label>
            <div class="col-sm-8">
                <input class="form-control" type="text" name="" id="" disabled>
            </div>
        </div>
        <div class="row mb-3 mt-3">
            <label class="col-sm-2 col-form-label" for="tracking">
                Status
            </label>
            <div class="col-sm-8">
                <select class="form-select" name="" id="">
                    <option value="">Acepted</option>
                    <option value="">Rejected</option>
                    <option value="">Delivered</option>
                    <option value="">Arrived</option>
                </select>
            </div>
        </div>

        <button type="button" class="margin-right: 1rem btn btn-outline-danger">Cancel</button>
        <button type="submit" class="btn btn-outline-primary">Edit</button>
    </form>
</div>
