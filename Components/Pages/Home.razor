<!-- Pages/Home.razor -->

@page "/"
@inherits LayoutComponentBase
@using ShipAndTrack.Components

<div class="container">
    <header class="header" style="margin-top: 20px;">
        <h1>Welcome to Express Haven Shipping</h1>
        <div class="action-buttons">
            <NavLink href="/login" class="btn btn-primary">Sign In</NavLink>
            <NavLink href="/registration" class="btn btn-secondary">Registration</NavLink>
        </div>
    </header>

    <div class="content" style="margin-top: 20px;">
        <div class="description">
            <p>Manage your packages and shipments with ease using our app. Sign in to track your packages, schedule shipments, and more.</p>
        </div>
    </div>

    <!-- Featured Packages Section -->
    <section class="featured-packages" style="margin-top: 20px;">
        <h1>Featured Packages</h1>
        <div class="row">
            <div class="col-md-4">
                <div class="package">
                    <img src="images/package4.jpg" alt="Express Shipping" class="img-fluid" />
                    <div class="package-info">
                        <h3>Express Shipping Package</h3>
                        <p>Get your packages delivered quickly with our express shipping option. This package ensures fast delivery within 2 days.</p>
                        <p>Price: $28.00</p>
                    </div>
                </div>
                <!-- Add more packages for the first column -->
            </div>
            <div class="col-md-4">
                <div class="package">
                    <img src="images/package3.jpg" alt="Priority Shipping" class="img-fluid" />
                    <div class="package-info">
                        <h3>Priority Shipping Package</h3>
                        <p>Ensure priority handling and delivery for your important packages. This package includes special handling and delivery within 1 day.</p>
                        <p>Price: $36.00</p>
                    </div>
                </div>
                <!-- Add more packages for the second column -->
            </div>
            <div class="col-md-4">
                <div class="package">
                    <img src="images/package5.jpg" alt="Economy Shipping" class="img-fluid" />
                    <div class="package-info">
                        <h3>Economy Shipping Package</h3>
                        <p>Save money on shipping costs with our economical shipping option. This package offers standard delivery within 5-7 days.</p>
                        <p>Price: $18.00</p>
                    </div>
                </div>
                <!-- Add more packages for the third column -->
            </div>
        </div>
    </section>
    
    <!-- Link to the dashboard -->
    <div class="dashboard-link" style="margin-top: 20px;">
        <p>View your packages:</p>
        <a href="/Dashboard" class="btn btn-secondary">Dashboard</a>
    </div>
</div>
